.activities {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  position: absolute;
}

.scroll {
  background-color: rgb(241, 241, 241);
}

.external {
  width: 90%;
  height: 350rpx;
  border: 1px solid rgb(241, 241, 241);
  position: relative;
  border-radius: 10rpx;
  margin-left: 5%;
  margin-bottom: 30rpx;
  background-color: white;
  box-shadow: 0 1rpx 6rpx rgba(0, 0, 0, 0.1);
}

.userUrl {
  width: 20%;
  height: 50rpx;
  margin-left: 4%;
  margin-top: 2%;
  display: inline-block;
}

.userTitle {
  position: absolute;
  left: 30%;
  right: 4%;
  top: 2%;
  font-size: 30rpx;
}

.userDes {
  position: absolute;
  left: 8%;
  right: 4%;
  top: 45%;
  word-break: break-all; /*允许在单词内换行*/
  text-align: left;
  text-overflow: -o-ellipsis-lastline; /*css3中webkit内核提供的一个方法类似ellipsis*/
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box; /*自适应盒子*/
  -webkit-line-clamp: 2; /*此处为1行,如果是两行就改成2*/
  -webkit-box-orient: vertical;
}

.small_font {
  font-size: small;
  color: #bbb;
}

.userDate {
  position: absolute;
  left: 30%;
  top: 25%;
}

.userClock {
  position: absolute;
  left: 30%;
  top: 34%;
}

.people {
  position: absolute;
  bottom: 20%;
  right: 12%;
}

.reverse {
  position: absolute;
  bottom: 20%;
  left: 12%;
}

.view_bottom {
  position: absolute;
  bottom: 2%;
  width: 100%;
  height: 70rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}

.comment-visiable {
  width: 90%;
  height: 400rpx;
  margin-left: 5%;
}

.comment {
  background-color: blue;
  width: 90%;
  height: 250rpx;
  margin-left: 5%;
  display: none;
}

.button {
  font-size: 30rpx;
  background-color: rgb(252, 118, 106);
  color: white;
  line-height: 50rpx;
  border: none;
}

.content {
  background-color: rgb(241, 241, 241);
  margin-bottom: 2%;
  border-radius: 5rpx;
}

.small {
  font-size: 30rpx;
  color: black;
}

.scroll-view {
  height: 400rpx;
}

.input_none {
  line-height: 30rpx;
  background-color: white;
  border-bottom: 1rpx rgb(241, 241, 241) solid;
  position: fixed;
  bottom: 0;
  width: 100%;
}
.hoverBtn{
  position: relative;
  top: 3rpx;
  box-shadow:0px 0px 8px rgb(241, 241, 241) inset; 
}
